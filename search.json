---
[
  {% for post in site.posts %}
  {
    "title": "{{ post.title | escape }}",
    "url": "{{ post.url | absolute_url | escape }}",
    "date": "{{ post.date | date: '%Y-%m-%d' }}",
    "tags": [ {% for t in post.tags %}"{{ t | escape }}"{% unless forloop.last %}, {% endunless %}{% endfor %} ],
    "categories": [ {% if post.categories %}{% for c in post.categories %}"{{ c | escape }}"{% unless forloop.last %}, {% endunless %}{% endfor %}{% else %}""{% endif %} ],
    "excerpt": "{{ post.excerpt | strip_html | escape }}",
    "content": "{{ post.content | strip_html | escape }}",
    "thumbnail": "{{ post.thumbnail | default: post.image | escape }}",
    "reading_time": {{ post.reading_time | default: 0 }}
  }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
